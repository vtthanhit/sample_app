<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("global.text_logo"), static_pages_home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("global.menu.home"), static_pages_home_path %></li>
        <li><%= link_to t("global.menu.help"), static_pages_help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t "global.menu.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("global.menu.profile"), current_user %></li>
              <li><%= link_to t("global.menu.settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t("global.menu.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("global.menu.login"), login_path %></li>
        <% end %>
        <li><%= link_to t("global.menu.en"), locale: :en %></li>
        <li><%= link_to t("global.menu.vi"), locale: :vi %></li>
      </ul>
    </nav>
  </div>
</header>
