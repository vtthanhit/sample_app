<% provide :title, "Home" %>
<div class="center jumbotron">
  <h1><%= t "pages.home.header" %></h1>
  <h2>
    <%= t "pages.home.content_home_header" %>
    <%= link_to t("pages.home.content_link_home"), "http://www.railstutorial.org" %> <%= t "pages.home.content_home_header_2" %>
  </h2>
  <%= link_to t("pages.home.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "pages.microposts.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% end %>
